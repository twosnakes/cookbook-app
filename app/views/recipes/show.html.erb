<h2><%= @recipe.title %></h2>
<h5>Last Updated On: <%= @recipe.friendly_updated_at %></h5>
<h4><%= @recipe.chef %></h4>
<h5>Prep Time: <%= @recipe.prep_time %></h5>
<h3>Ingredients</h3>
<ul>
  <% @recipe.ingredient_list.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>
<h3>Directions</h3>
<ol>
 <% @recipe.directions_list.each do |direction| %>
 <li><%= direction %></li>
 <% end %>

<%= link_to "Edit Recipe", "/recipes/#{ @recipe.id }/edit" %>

<%= link_to "Delete", "/recipes/#{ @recipe.id }", method: :delete %> 