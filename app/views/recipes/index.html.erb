<h1>Amazing Recipes</h1>

<p>You have visited this page <%= @visit_count %> times.</p>
 <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="thumbnail well">

        <h1><a href="/recipes/<%= recipe.id %>"> <%= recipe.title %></a></h1>
        <h4><%= recipe.ingredients %></h4>
        <h3><%= recipe.directions %></h3>
        <h5><%= recipe.friendly_prep_time %></h5>
        <img src="<%= recipe.image_url %>">
      </div>
    </div>
  <% end %>
</div>